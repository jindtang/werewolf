<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Werewolf Game Rules"
            android:id="@+id/textView9"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting up"
            android:id="@+id/info_1"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:onClick="set"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night"
            android:id="@+id/info_2"
            android:textSize="20dp"
            android:onClick="night"
            android:layout_below="@+id/info_1"
            android:layout_marginTop="45dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/info_1"
            android:layout_alignStart="@+id/info_1"
            android:layout_alignRight="@+id/info_1"
            android:layout_alignEnd="@+id/info_1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daytime"
            android:id="@+id/info_3"
            android:textSize="20dp"
            android:onClick="daytime"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/info_2"
            android:layout_alignLeft="@+id/info_2"
            android:layout_alignStart="@+id/info_2"
            android:layout_alignRight="@+id/info_2"
            android:layout_alignEnd="@+id/info_2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Victory"
            android:textSize="20dp"
            android:id="@+id/info_4"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/info_3"
            android:layout_alignRight="@+id/info_3"
            android:layout_alignEnd="@+id/info_3"
            android:layout_alignLeft="@+id/info_3"
            android:layout_alignStart="@+id/info_3"
            android:onClick="victory"/>
    </RelativeLayout>
</LinearLayout><!-- From: file:/C:/Users/Lin/Dropbox/Werewolf/app/src/main/res/layout/activity_information.xml -->